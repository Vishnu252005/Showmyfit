rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - comprehensive rules for all operations
    match /users/{userId} {
      // Users can read and write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Users can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow admin operations on any user document
      allow read, write: if request.auth != null;
    }
    
    // Admins collection - anyone can read, all authenticated users can write
    match /admins/{adminEmail} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Sellers collection - anyone can read, all authenticated users can write
    match /sellers/{sellerEmail} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Products collection - anyone can read, authenticated users can write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders collection - users can access their own orders, all authenticated users can read
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth != null);
    }
    
    // Cart items - users can only access their own cart
    match /cart/{cartId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Wishlist items - users can only access their own wishlist
    match /wishlist/{wishlistId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Store information - anyone can read, authenticated users can write
    match /stores/{storeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Store products - anyone can read, authenticated users can write
    match /storeProducts/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reviews - anyone can read, authenticated users can write
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Categories - anyone can read, authenticated users can write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin-only collections - all authenticated users can access
    match /admin/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Admin settings - all authenticated users can access
    match /adminSettings/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Analytics and logs - all authenticated users can access
    match /analytics/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // User sessions - users can only access their own sessions
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Notifications - users can only access their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Additional collections for comprehensive coverage
    match /sellerApplications/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /userProfiles/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /systemSettings/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /auditLogs/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}